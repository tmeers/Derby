@model IEnumerable<Derby.Models.Scout>

@{
    ViewBag.Title = "Scouts";
}

<h3>Scouts</h3>

<p>
    @Html.ActionLink("Create New", "Create", "Scout", new { }, new { @class = "btn btn-xs btn-success" }) &nbsp;|&nbsp;
    @Html.ActionLink("Back to Pack", "details", "Pack", new { id = Convert.ToInt32(Url.RequestContext.RouteData.Values["packId"]) }, new { @class = "btn btn-xs btn-default" })
</p>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
        <a href="#activescouts" data-toggle="tab">Active</a>
    </li>
    <li role="presentation">
        <a href="#inactivescouts" data-toggle="tab">Inactive</a>
    </li>

</ul>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane activescouts active" id="activescouts">
        <table class="table table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDateTime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Where(x => !x.Inactive))
            {
                <tr>
                    <td>
                        @if (!item.Inactive)
                        {
                            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Name)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDateTime)
                    </td>
                    <td>
                        @if (!item.Inactive)
                        {
                            <a href="@Url.Action("Details", "Scout", new {id = item.Id})" class="btn btn-xs btn-default" title="Details"><i class="fa fa-info"></i>&nbsp; Details</a>
                            @:|
                        }

                        @if (!item.Inactive)
                        {
                            <a href="@Url.Action("Inactivate", "Scout", new {id = item.Id})" class="btn btn-xs btn-default" title="Details"><i class="fa fa-pause"></i>&nbsp; Inactivate</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Activate", "Scout", new {id = item.Id})" class="btn btn-xs btn-default" title="Details"><i class="fa fa-play"></i>&nbsp; Activate</a>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div role="tabpanel" class="tab-pane" id="inactivescouts">
        <table class="table table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDateTime)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Where(x => x.Inactive))
            {
                <tr>
                    <td>
                        @if (!item.Inactive)
                        {
                            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Name)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDateTime)
                    </td>
                    <td>
                        @if (!item.Inactive)
                        {
                            <a href="@Url.Action("Details", "Scout", new {id = item.Id})" class="btn btn-xs btn-default" title="Details"><i class="fa fa-info"></i>&nbsp; Details</a>
                            @:|
                        }

                        @if (!item.Inactive)
                        {
                            <a href="@Url.Action("Inactivate", "Scout", new {id = item.Id})" class="btn btn-xs btn-default" title="Details"><i class="fa fa-pause"></i>&nbsp; Inactivate</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Activate", "Scout", new {id = item.Id})" class="btn btn-xs btn-default" title="Details"><i class="fa fa-play"></i>&nbsp; Activate</a>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>