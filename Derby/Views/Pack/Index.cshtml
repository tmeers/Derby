@using Derby.Infrastructure
@model IEnumerable<Derby.ViewModels.PackViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Registered Packs</h2>

@if (!Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create", new {}, new {@class = "btn btn-xs btn-success"})
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dens)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scouts)
        </th>
        <th></th>
    </tr>

@foreach (var pack in Model) 
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => pack.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pack.Region)
        </td>
        <td>
            @pack.Dens.Count()
        </td>
        <td>
            @pack.Scouts.Count()
        </td>
        <td>
            @if (pack.Membership != null)
            {
                @Html.ActionLink("Details", "Details", new {id = pack.Id}, new {@class = "btn btn-xs btn-default"}) @:|
                @Html.ActionLink("Add Den", "Create", "Den", new {packId = pack.Id}, new {@class = "btn btn-xs btn-success"})
                if (pack.Membership.AccessLevel == OwnershipType.Owner || pack.Membership.AccessLevel == OwnershipType.Contributor)
                 {
                     @: | 
                     @Html.ActionLink("New Competition", "create", "Competition", new { packId = pack.Id }, new { @class = "btn btn-xs btn-info" })
                 }
                
                if (pack.Membership.AccessLevel == OwnershipType.Owner)
                 {
                     @:&nbsp; | &nbsp;
                     @Html.ActionLink("Delete", "Delete", new {id = pack.Id}, new {@class = "btn btn-xs btn-danger"})
                 }
            }
        </td>
    </tr>
}

</table>
