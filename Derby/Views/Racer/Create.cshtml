@model Derby.ViewModels.CreateRacerViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    <h2>Register Racer</h2>
    <h4><em>&nbsp; &nbsp; @Model.ScoutName</em></h4>
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CarNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CarNumber)
                @Html.ValidationMessageFor(model => model.CarNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Weight, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Weight)
                @Html.ValidationMessageFor(model => model.Weight)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DenId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DenId, new SelectList(Model.Dens.Where(x => !x.IsSystemPlaceholder), "Id", "Name", Model.Dens))
            </div>
        </div>

        @Html.HiddenFor(model => model.ScoutId)
        @Html.HiddenFor(model => model.CompetitionId)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<br/>
<div>
    @Html.ActionLink("Back to List", "Details", "Competition", new { id = Model.CompetitionId }, new { @class = "btn btn-xs btn-default" })
</div>
